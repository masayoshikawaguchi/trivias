<h1><%= @category.content %></h1>

<ul class="media-list">
  <% @trivians.each do |trivian| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(trivian.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <%= link_to trivian.user.name, user_path(trivian.user) %> <span class="text-muted">posted at <%= trivian.created_at %></span>
        </div>
        <div>
          <p><%= trivian.content %></p>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @trivians %>
</ul>