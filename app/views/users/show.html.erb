<div class="row">
  <div class="col-sm-5">
    <div class="user-profile">
      <div class="icon text-left">
        <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
      </div>
      <div class="name text-left">
        <h1><%= @user.name %></h1>
      </div>
    </div>
  </div>
  
<div class="col-sm-offset-2 col-sm-5">
        <h2>過去の投稿</h2>

  <ul class="media-list">
        <% @trivians.each do |trivian| %>
      <li class="media">
        <div class="media-body">
          
          
          <div class="panel panel-primary">
              <div class="panel-heading">
                  <h3 class="panel-title">
                    <%= link_to trivian.category.content, category_path(trivian.category) %>
                    <span class="text-dark">posted at <%= trivian.created_at %></span>
                  </h3>
              </div>
              <div class="panel-body">
                <div>
                  <p><%= trivian.content %></p> 
                  <span class="clip">
    <% if trivian.iine?(current_user) %>
      <%= form_for(trivian.clips.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{trivian.clips_count}", class: "glyphicon glyphicon-star" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(trivian.clips.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :trivian_id, trivian.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "#{trivian.clips_count}", class: "glyphicon glyphicon-star-empty" %>
        <% end %>
      <% end %>
    <% end %>
    </span>
                </div>
              </div>
          </div>

          
          
        </div>
      </li>
        <% end %>
       <%= paginate @trivians %>
  </ul>
</div>
