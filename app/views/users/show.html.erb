<div class="user-profile">
  <div class="icon text-left">
    <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
  </div>
  <div class="name text-left">
    <h1><%= @user.name %></h1>
  </div>
  <div class="text-center">
    <%= link_to '新規投稿', new_trivian_path %>
  </div>
  <div class="text-right">
    <h1>過去の投稿</h1>
    <ul class="media-list">
  <% @trivians.each do |trivian| %>
    <li class="media">
      <div class="media-left">
        <img class="media-object img-rounded" src="<%= gravatar_url(trivian.user, options = { size: 50 }) %>" alt="">
      </div>
      <div class="media-body">
        <div>
          <p><%= trivian.category.content %></p> <span class="text-muted">posted at <%= trivian.created_at %></span>
        </div>
        <div>
          <p><%= trivian.content %></p>
        </div>
        <div>
            <%= link_to "Delete", trivian, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @trivians %>
</ul>
  </div>
</div>
