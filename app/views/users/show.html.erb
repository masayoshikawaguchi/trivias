<div class="row">
  <div class="col-sm-5">
    <div class="user-profile">
      <div class="icon text-left">
        <img src="<%= gravatar_url(@user, size: 100) %>" alt="" class="img-circle">
      </div>
      <div class="name text-left">
        <h1><%= @user.name %></h1>
      </div>
    </div>
  </div>
  
<div class="col-sm-offset-2 col-sm-5">
        <h2>過去の投稿</h2>

  <ul class="media-list">
        <% @trivians.each do |trivian| %>
      <li class="media">
        <div class="media-body">
          <div>
            <p><%= trivian.category.content %></p> <span class="text-muted">posted at <%= trivian.created_at %></span>
          </div>
          <div>
            <p><%= trivian.content %></p>
          </div>
          <div>
            <% if current_user == trivian.user %>
              <%= link_to "Delete", trivian, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
            <% end %>
          </div>
        </div>
      </li>
        <% end %>
       <%= paginate @trivians %>
  </ul>
</div>
