<h1>お気に入りランキング</h1>
    <% @rank.each.with_index(1) do |rank,i| %>
     <h2><%= "第#{i}位" %> <span class="glyphicon glyphicon-star"></span><%= rank.clips_count %></h2>
     <div class="panel panel-primary">
         <div class="panel-heading">
             <h3 class="panel-title"><%=link_to rank.category.content, category_path(rank.category) %> by <%=link_to rank.user.name, user_path(rank.user) %></h3>
         </div>
         <div class="panel-body">
           <%= rank.content %> 
         </div>
     </div>
    <% end %>